# Production Environment Variables
# Copy this file to .env.production and fill in your production values

# Authentication
AUTH_SECRET=your-production-auth-secret-here

# Database - Production
# Use POSTGRES_URL_PROD for GitHub Actions, or POSTGRES_URL for Vercel
POSTGRES_URL_PROD=postgresql://user:password@host:5432/myapp_production

# Redis - Production (optional - only needed for resumable streams)
# Use REDIS_URL_PROD for GitHub Actions, or REDIS_URL for Vercel
REDIS_URL_PROD=redis://user:password@host:6379

# Blob Storage - Production
# Use BLOB_READ_WRITE_TOKEN_PROD for GitHub Actions, or BLOB_READ_WRITE_TOKEN for Vercel
BLOB_READ_WRITE_TOKEN_PROD=vercel_blob_production_token_here

# AI Provider
XAI_API_KEY=your-xai-api-key-here

# Public URLs
NEXT_PUBLIC_PROD_URL=https://app.yourdomain.com

# Vercel Environment (set automatically by Vercel)
# VERCEL_ENV=production