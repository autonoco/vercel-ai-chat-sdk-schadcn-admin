# Staging Environment Variables
# Copy this file to .env.staging and fill in your staging values

# Authentication
AUTH_SECRET=your-staging-auth-secret-here

# Database - Staging
# Use POSTGRES_URL_STAGING for GitHub Actions, or POSTGRES_URL for Vercel
POSTGRES_URL_STAGING=postgresql://user:password@host:5432/myapp_staging

# Redis - Staging (optional - only needed for resumable streams)
# Use REDIS_URL_STAGING for GitHub Actions, or REDIS_URL for Vercel
REDIS_URL_STAGING=redis://user:password@host:6379

# Blob Storage - Staging
# Use BLOB_READ_WRITE_TOKEN_STAGING for GitHub Actions, or BLOB_READ_WRITE_TOKEN for Vercel
BLOB_READ_WRITE_TOKEN_STAGING=vercel_blob_staging_token_here

# AI Provider
XAI_API_KEY=your-xai-api-key-here

# Public URLs
NEXT_PUBLIC_STAGING_URL=https://staging.yourdomain.com

# Vercel Environment (set automatically by Vercel)
# VERCEL_ENV=preview